<%= form_for(@veteran, html: {class: "form-horizontal", "role" => 'form'} ) do |f| %>
  <% if @veteran.errors.any? %>
    <% @veteran.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
  	    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
          <%= message %>
	  </div>
  </div>
    <% end %>
  <% end %>

  <div class="form-group">
  	<div class="col-md-6">
      <%= f.text_field :email, placeholder: "email address", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-6">
	     <%= f.text_field :first_name, placeholder: "first name", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
  	<div class="col-md-6">
  	  <%= f.text_field :last_name, placeholder: "last name", class: 'form-control' %>
  	</div>
  </div>

  <div class="form-group">
  	<div class="col-md-6">
      <%= f.select :service_branch, service_branches, {include_blank: true, prompt: 'branch of service'}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
  	<div class="col-md-6">
      <%= f.text_field :zip, placeholder: "zip code", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
  	<div class="col-sm-10">
      <%= f.submit "*I certify that I'm serving/served in the U.S. Armed Forces and want to learn to code.", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
<hr>
